{
	"compilerOptions": {
		"baseUrl": "..",
		"paths": {
			"$src": [
				"src"
			],
			"$src/*": [
				"src/*"
			],
			"$lib": [
				"src/lib"
			],
			"$lib/*": [
				"src/lib/*"
			],
			"$stores": [
				"src/stores"
			],
			"$stores/*": [
				"src/stores/*"
			],
			"$assets": [
				"src/assets"
			],
			"$assets/*": [
				"src/assets/*"
			],
			"$icon": [
				"node_modules/svelte-bootstrap-icons/lib"
			],
			"$icon/*": [
				"node_modules/svelte-bootstrap-icons/lib/*"
			]
		},
		"rootDirs": [
			"..",
			"./types"
		],
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"preserveValueImports": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"./types/**/$types.d.ts",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"./[!ambient.d.ts]**"
	]
}